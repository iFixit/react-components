{
   "name": "@ifixit/react-components",
   "version": "0.1.0",
   "repository": {
      "type": "git",
      "url": "git@github.com:iFixit/react-components.git"
   },
   "source": "src/index.tsx",
   "license": "UNLICENSED",
   "main": "dist/react-components.js",
   "typings": "dist/index.d.ts",
   "exports": "dist/react-components.modern.js",
   "module": "dist/react-components.module.js",
   "unpkg": "dist/react-components.umd.js",
   "files": [
      "dist"
   ],
   "scripts": {
      "build": "microbundle --jsx React.createElement",
      "dev": "microbundle watch",
      "storybook": "start-storybook -p 6006 -h localhost",
      "build-storybook": "build-storybook",
      "format": "prettier --write .",
      "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
      "analyze-bundle": "source-map-explorer dist/react-components.js",
      "upgrade-interactive": "npm-check --update",
      "prepare": "husky install",
      "gen:theme-typings": "chakra-cli tokens ./src/theme/index.ts"
   },
   "peerDependencies": {
      "react": ">=16",
      "@chakra-ui/react": ">=1.4.2",
      "@emotion/react": ">=11",
      "@emotion/styled": ">=11",
      "framer-motion": ">=4"
   },
   "devDependencies": {
      "@axe-core/react": "4.1.1",
      "@babel/core": "7.13.14",
      "@chakra-ui/cli": "1.3.0",
      "@chakra-ui/react": "1.4.2",
      "@emotion/react": "11.1.5",
      "@emotion/styled": "11.1.5",
      "@storybook/addon-a11y": "6.2.3",
      "@storybook/addon-actions": "6.2.3",
      "@storybook/addon-console": "1.2.3",
      "@storybook/addon-essentials": "6.2.3",
      "@storybook/addon-links": "6.2.3",
      "@storybook/react": "6.2.3",
      "@types/node": "14.14.37",
      "@types/react": "17.0.3",
      "@typescript-eslint/eslint-plugin": "4.20.0",
      "@typescript-eslint/parser": "4.20.0",
      "babel-loader": "8.2.2",
      "eslint": "7.23.0",
      "eslint-config-prettier": "8.1.0",
      "eslint-plugin-react-hooks": "4.2.0",
      "framer-motion": "4.1.2",
      "husky": "6.0.0",
      "lint-staged": "10.5.4",
      "microbundle": "0.13.0",
      "npm-check": "5.9.2",
      "postcss": "8.2.9",
      "prettier": "2.2.1",
      "react": "17.0.2",
      "react-dom": "17.0.2",
      "source-map-explorer": "2.5.2",
      "typescript": "4.2.3"
   },
   "dependencies": {},
   "lint-staged": {
      "*.{js,ts,tsx,css,md,mdx}": "prettier --write",
      "*.{js,ts,tsx}": "npm run lint"
   }
}
